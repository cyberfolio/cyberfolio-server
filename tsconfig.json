{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["./src"],
  "exclude": ["node_modules", "<node_internals>/**"],
  "ts-node": {
    "esm": true,
  },
  "lib": ["esnext"],
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "useUnknownInCatchVariables": false, // TypeScript 4.4+ only!
    "types": [
      "node"
    ],
    "paths": {
      "@providers/*": ["src/modules/providers/*"],
      "@config/*": ["src/config/*"],
      "@dex/*": ["src/modules/dex/*"],
      "@cex/*": ["src/modules/cex/*"],
      "@src/*": ["src/*"]
    }
  },
}
