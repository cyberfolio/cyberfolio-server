{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["./src"],
  "exclude": ["node_modules", "<node_internals>/**"],
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "lib": ["esnext"],
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", ".src/config/index.d.ts"],
    "types": ["node"],
    "paths": {
      "@providers/*": ["src/modules/providers/*"],
      "@constants/*": ["src/constants/*"],
      "@config/*": ["src/config/*"],
      "@dex/*": ["src/modules/dex/*"],
      "@cex/*": ["src/modules/cex/*"],
      "@api/*": ["src/api/*"],
      "@src/*": ["src/*"]
    }
  }
}
